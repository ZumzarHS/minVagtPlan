@model minVagtPlan.Models.ViewModels.AssignEmployeesViewModel

<h1>Assign Employees to Shift @Model.ShiftDetails</h1>

<form method="post">
    <input type="hidden" asp-for="ShiftId" />

    <div class="form-group">
        <label>Employees</label>
        <div>
            @foreach (var employee in Model.AvailableEmployees)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="AssignedEmployeeIds" value="@employee.Value" id="employee_@employee.Value" @(Model.AssignedEmployeeIds.Contains(Guid.Parse(employee.Value)) ? "checked" : "") />
                    <label class="form-check-label" for="employee_@employee.Value">@employee.Text</label>
                </div>
            }
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}