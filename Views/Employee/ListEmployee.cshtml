@model List<minVagtPlan.Models.Entities.Employee>

<h1>All Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Full Name</th>
            <th>Role</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Assignment" asp-action="AssignShifts" asp-route-id="@employee.EmployeeId">@employee.EmployeeId</a>
                </td>
                <td>@employee.FullName</td>
                <td>@employee.Role</td>
            <td>
                <div class="btn-group" role="group">
                    <a class="btn btn-primary" asp-controller="Employee" asp-action="EditEmployee"
                       asp-route-id="@employee.EmployeeId">Edit</a>
                        <form method="post" asp-controller="Employee" asp-action="DeleteEmployee"
                          onsubmit="return confirm('Are you sure you want to delete this employee?');">
                        <input type="hidden" name="EmployeeId" value="@employee.EmployeeId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </td>
            </tr>
        }
     </tbody>
</table>
