@model List<minVagtPlan.Models.Entities.Shift>

@{
    ViewData["Title"] = "My Shifts";
}

<h1>My Shifts</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">You have no assigned shifts.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Start Time</th>
                <th>End Time</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var shift in Model)
        {
            <tr>
                <td>@shift.StartTime</td>
                <td>@shift.EndTime</td>
            </tr>
        }
        </tbody>
    </table>
}