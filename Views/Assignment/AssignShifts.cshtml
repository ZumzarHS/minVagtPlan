@model minVagtPlan.Models.ViewModels.AssignShiftsViewModel

<h1>Assign Shifts to @Model.EmployeeName</h1>

<form method="post">
    <input type="hidden" asp-for="EmployeeId" />

    <div class="form-group">
        <label>Shifts</label>
        <div>
            @foreach (var shift in Model.AvailableShifts)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="AssignedShiftIds" value="@shift.Value" id="shift_@shift.Value" @(Model.AssignedShiftIds.Contains(Guid.Parse(shift.Value)) ? "checked" : "") />
                    <label class="form-check-label" for="shift_@shift.Value">@shift.Text</label>
                </div>
            }
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

